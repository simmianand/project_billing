<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="work_view_billing_form">
            <field name="model">project.work</field>
            <field name="type">form</field>
            <field name="inherit" ref="project.work_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath
                            expr="/form/field[@name=&quot;party_address&quot;]"
                            position="after">
                        <newline /> 
                        <label name="hr_rate"/>
                        <field name="hr_rate"/>
                        <label name="currency"/>
                        <field name="currency"/>
                        <label name="billable"/>
                        <field name="billable"/>
                        <button name="createinvoice" string="_Create Invoice" 
                          icon="tryton-go-next" colspan="2" />
                    </xpath>
                    <xpath
                            expr="/form/notebook/page[@id='timesheet_lines']" 
                            position="after">
                        <page string="Resources" id="resources_list">
                            <field name="resources" colspan="4"/>
                        </page>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_resource_view_tree">
            <field name="model">project.resource</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Project Resource">
                        <field name="project"/>
                        <field name="employee"/>
                        <field name="product"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_resource_view_form">
            <field name="model">project.resource</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Project Resource">
                        <label name="project"/>
                        <field name="project"/>
                        <newline/>
                        <label name="employee"/>
                        <field name="employee"/>
                        <newline/>
                        <label name="product"/>
                        <field name="product"/>
                    </form>
                ]]>
            </field>
        </record>
    </data>
</tryton>
