<?xml version="1.0"?>
<tryton>
    <data>
        <record model="ir.ui.view" id="work_view_billing_form">
            <field name="model">project.work</field>
            <field name="type">form</field>
            <field name="inherit" ref="project.work_view_form"/>
            <field name="arch" type="xml">
                <![CDATA[
                <data>
                    <xpath
                            expr="/form/field[@name=&quot;party_address&quot;]"
                            position="after">
                        <newline /> 
                        <label name="billable"/>
                        <field name="billable"/>
                    </xpath>
                    <xpath
                            expr="/form/notebook/page[@id='timesheet_lines']" 
                            position="after">
                        <page string="Resources" id="resources_list">
                            <field name="resources" colspan="4"/>
                        </page>
                    </xpath>
                </data>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_prices_form">
            <field name="model">project.prices</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Project Prices">
                        <label name="project"/>
                        <field name="project"/>
                        <newline/>
                        <label name="service"/>
                        <field name="service"/>
                        <newline/>
                        <label name="rate"/>
                        <field name="rate"/>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_prices_tree">
            <field name="model">project.prices</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Project Prices">
                        <field name="project"/>
                        <field name="service"/>
                        <field name="rate"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_resource_view_tree">
            <field name="model">project.resource</field>
            <field name="type">tree</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <tree string="Project Resource">
                        <field name="project"/>
                        <field name="employee"/>
                        <field name="service"/>
                    </tree>
                ]]>
            </field>
        </record>
        <record model="ir.ui.view" id="project_resource_view_form">
            <field name="model">project.resource</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <![CDATA[
                    <form string="Project Resource">
                        <label name="project"/>
                        <field name="project"/>
                        <newline/>
                        <label name="employee"/>
                        <field name="employee"/>
                        <newline/>
                        <label name="service"/>
                        <field name="service"/>
                    </form>
                ]]>
            </field>
        </record>
        <record model="ir.action.act_window" id="act_project_prices_form">
            <field name="name">Prices</field>
            <field name="res_model">project.prices</field>
        </record>
        <record model="ir.action.act_window.view" id="act_project_prices_form_view1">
            <field name="sequence" eval="20" />
            <field name="view" ref="project_prices_form" />
            <field name="act_window" ref="act_project_prices_form" />
        </record>
        <record model="ir.action.act_window.view" id="act_project_prices_form_view2">
            <field name="sequence" eval="10" />
            <field name="view" ref="project_prices_tree" />
            <field name="act_window" ref="act_project_prices_form" />
        </record>
        <menuitem action="act_project_prices_form" id="prices_form" sequence="2"/>
    </data>
</tryton>
